extends layout

block content
  h1 NextCore API Explore

  head
    form(id='api-request-form', target='result', action='/api')
      select(id='method', name='http-request-method')
        option(value='GET')    GET
        option(value='POST')   POST
        option(value='PUT')    PUT
        option(value='DELETE') DELETE

      | #{nextcore.scheme}://#{nextcore.host}

      input(id='path', type='text', value='/')

      p クエリ
      textarea(id='query')

  section
    iframe(id='result')
